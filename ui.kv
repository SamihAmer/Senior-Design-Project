ScreenManagement:
    IntroScreen:
    InfoScreen:
    MainScreen:
    MotionExam:

<IntroScreen>:
    name: "intro"

    BoxLayout:
        orientation: 'vertical'
        padding: 100
        Label:
            text: "Welcome to AEye Tracker!"
            color: (40/255,40/255,40/255,1)
            font_size: 40
        Image:
            source: 'logo.png'
            size: self.texture_size
        Button:
            font_size: 20
            size_hint: 1, .4
            text: "Continue"
            on_release: app.root.current = "info"

<InfoScreen>:
    name: "info"

    BoxLayout:
        orientation: 'vertical'
        padding: 100
        Label:
            text: "Please Enter User Info:"
            color: (40/255,40/255,40/255,1)
            font_size: 40
        TextInput:
            hint_text:'Enter Patient ID'
            size_hint_y: .2
        Button:
            font_size: 20
            size_hint: 1, .4
            text: "Continue"
            on_release: app.root.current = "main"

<MainScreen>:
    name: "main"

    BoxLayout:
        orientation: 'vertical'
        CameraPreview:
            size: root.size
        Button:
            font_size: 20
            size_hint: 1,.1
            text: "Initiate Motion Exam"
            on_release: app.root.current = "exam"
        Button:
            font_size: 20
            size_hint: 1,.1
            text: "Initiate Face Tracking"
            on_release: import Iris_Face_Mesh

<MotionExam>:
    name: "exam"

    BoxLayout:
        orientation: 'vertical'
    Label:
        id: label1
        text_opacity: 1
        text: "When Ready, Press Button To Begin Exam"
        color: (40/255,40/255,40/255,self.text_opacity)
        font_size: 40
        size_hint: 1, 1
    Button:
        font_size: 20
        size_hint: .2, .1
        text: "Begin Exam"
        on_release:
            app.exam(ball)
            app.test(label1)
    Widget:
        id: ball
        my_pos: (0, 0)
        my_color: (1, 0, 0, 0)
        canvas:
            Color:
                rgba: self.my_color
            Ellipse:
                size: 25 , 25
                angle_start: 0
                angle_end: 360
                pos: self.my_pos